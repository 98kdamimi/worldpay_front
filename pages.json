{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^u--(.*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue",
			"^up-(.*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue",
			"^u-([^-].*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			// 首页
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			// 增值页面
			"path": "pages/topUp/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			// 卡片列表 
			"path": "pages/cardList/cardList",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			// 虚拟卡
			"path": "pages/virtualCard/virtualCard",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			// 充值
			"path": "pages/valueAdded/valueAdded",
			"style": {
				"navigationStyle": "custom"
			}
		}
	],
	"subPackages": [{
		"root": "pagesMessage",
		"pages": [{
			"path": "index/index",
			"style": {
				"navigationStyle": "custom"
			}
		}]
	}, {
		"root": "pagesMine",
		"pages": [{
			"path": "index/index",
			"style": {
				"navigationStyle": "custom"
			}
		}]
	}],
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#FFFFFF",
		"borderStyle": "black",
		"backgroundColor": "#1A1A1D",
		"height": "60px",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "/static/image/tabbar/home.png",
				"selectedIconPath": "/static/image/tabbar/homeActive.png",
				"text": "首页"
			},
			{
				"pagePath": "pagesMessage/index/index",
				"text": "消息",
				"iconPath": "/static/image/tabbar/message.png",
				"selectedIconPath": "/static/image/tabbar/messageActive.png"
			},
			{
				"pagePath": "pagesMine/index/index",
				"text": "我的",
				"iconPath": "/static/image/tabbar/mine.png",
				"selectedIconPath": "/static/image/tabbar/mineActive.png"
			}
		]
	},

	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#0f0f0f",
		"backgroundColor": "#ffffff"
	},
	"uniIdRouter": {}
}